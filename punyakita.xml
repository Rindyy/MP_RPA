<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P1 : "
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/ranged1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranged"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/melee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melee"
            android:textSize="20sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/troops1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter number of troops for P1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P2 : "
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/ranged2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ranged"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/melee2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melee"
            android:textSize="20sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/troops2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter number of troops for P2"/>

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:onClick="enter"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="20sp"/>
</LinearLayout>
